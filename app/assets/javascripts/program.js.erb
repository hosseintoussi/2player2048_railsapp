function start() {
	$.ajax({  
		type: "POST",  
		url: "/start",  
		data: {},  
		success: function(data) {  
			console.log(data)
			$('#tile-container').html(data.board);
			$('#score-container').html(data.score);
			console.log('game started.'); 
		}  
	}); 
}

